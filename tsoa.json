{
  "entryFile": "./src/Application.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/controllers/*.controller.ts"],
  "routes": {
    "authenticationModule": "./src/utils/Authentication.ts",
    "basePath": "/templateApi",
    "routesDir": "./src",
    "middleware": "express",
    "routesFileName": "tsoa-routes.ts"
  },
  "spec": {
    "securityDefinitions": {
      "jwt": {
          "type": "apiKey",
          "name": "Authorization",
            "in": "headers",
            "description": "JWT Token in the Authorization header"
      }
  },
    "outputDirectory": "./spec",
    "host": "notes-api-d2v4.onrender.com",
    "basePath": "/templateApi",
    "specVersion": 3,
    "schemes": ["https"]
  },
  "compilerOptions": {
    "baseUrl": "https://notes-api-d2v4.onrender.com"
  }
}

